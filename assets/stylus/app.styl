.image_responsive
    max-width: 100%
    vertical-align: middle

#container
    display: flex
    flex-flow: row wrap
    .navbar
        flex: 0 0 auto
        height: 100vh
        border: 1px solid #E2E2E2
        text-align: center
        .logo
            margin: 20px 0 60px
        .nav_list
            .nav_item
                display: block
                padding: 20px 30px
                border-left: 2px solid transparent
                background-color: transparent
                transition: .3s ease-in-out
                &:hover,
                &:focus
                    background-color: #E2FDF9
                    border-left: 2px solid #33B09D
                    transition: .3s ease-in-out
    .content
        flex: 1 auto
