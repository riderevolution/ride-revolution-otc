                                position: absolute
                                top: 50%
                                width: 0
                                height: 0
                                border-left: 7px solid transparent
                                border-right: 7px solid transparent
                                border-top: 7px solid $green
                                right: 25px
                                z-index: 1
                                transform: translateY(-50%) rotate(0deg)
                                opacity: 0
                                visibility: hidden
                                transition: .3s ease-in-out
                        &.nuxt-link-exact-active,
                        &.nuxt-link-active,
                        &:hover,
                        &:focus
                            background-color: $light_green
                            border-left: 2px solid $green
                            transition: .3s ease-in-out .1s
                            &.dashboard
                                background-image: url('/icons/navbar/dashboard-selected.png')
                            &.booker
                                background-image: url('/icons/navbar/booker-selected.png')
                            &.scheduler
                                background-image: url('/icons/navbar/scheduler-selected.png')
                            &.customers
                                background-image: url('/icons/navbar/customers-selected.png')
                            &.instructors
                                background-image: url('/icons/navbar/instructors-selected.png')
                            &.supplies
                                background-image: url('/icons/navbar/supplies-selected.png')
                            &.reporting
                                background-image: url('/icons/navbar/reporting-selected.png')
                            &.admin
                                background-image: url('/icons/navbar/admin-selected.png')
                    &.toggled
                        .nav_item
                            & ~ .sub_wrapper
                                opacity: 1
                                transition: .3s ease-in-out
                            &.nav_parent
                                position: relative
                                &::before
                                    transform: translateY(-50%) rotate(-180deg)
                                    transition: .3s ease-in-out
                    .sub_wrapper
                        .sub_nav_list
                            list-style: none
                            padding: 0
                            .sub_item_wrapper
                                .sub_nav_item
                                    position: relative
                                    display: block
                                    sf_pro_light(0px)
                                    color: $black
                                    text-decoration: none
                                    outline: none
                                    padding: 20px 30px
                                    background-color: transparent
                                    border-left: 2px solid transparent
                                    transition: .3s ease-in-out
                                    &.nuxt-link-exact-active,
                                    &.nuxt-link-active,
                                    &:hover,
                                    &:focus
                                        background-color: $light_green
                                        border-left: 2px solid $green
