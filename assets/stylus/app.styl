/**
 * Default Form */
.default_select
    width: 100%
    padding: 15px 40px 15px 15px
    sf_pro_regular(15px)
    color: $black
    -webkit-appearance: none
    outline: none
    box-shadow: none
    border: 1px solid $border
    background-color: $white
    border-radius: 3px
    background-image: url('/icons/default-select-icon.svg')
    background-position: calc(100% - 15px) center
    background-repeat: no-repeat
    &.alternate
        background-image: url('/icons/custom-select-icon.svg')

.default_text
    width: 100%
    background-color: $white
    border: 1px solid #ccc
    padding: 15px
    border-radius: 3px
    sf_pro_regular(15px)
    color: $black
    outline: none
    transition: .3s ease-in-out
    &.search
        background-image: url('/icons/search-icon.svg')
        background-position: calc(100% - 10px) center
        background-repeat: no-repeat
        background-size: 20px
    &.number
        &::-webkit-outer-spin-button,
        &::-webkit-inner-spin-button
            -webkit-appearance: none
    &:hover,
    &:focus
        border: 1px solid $black
        transition: .3s ease-in-out

#default_form
    width: 100%
    max-width: 50%
    margin: 20px auto 0
    &.overlay
        position: fixed
        top: 50%
        z-index: 4
        left: 50%
        transform: translate(-50%, -50%)
    .form_wrapper
        background-color: $white
        box-shadow: 5px 5px 40px rgba(0, 0, 0, 0.05)
        margin-bottom: 60px
        border-radius: 5px
        .form_title
            sf_pro_bold(22px)
            color: $black
            padding: 30px
            border-bottom: 1px solid $border
        .form_main_group
            padding: 30px
    .form_footer_wrapper
        margin-bottom: 60px

.form_flex
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: space-between
    .form_group
        flex: 0 0 48.33%
        &.flex
            display: flex
            flex-flow: row wrap
            align-items: center
            justify-content: space-between
            label
                flex: 0 0 100%
            .form_flex_input
                position: relative
                flex: 0 0 48.33%
                .placeholder
                    position: absolute
                    top: 50%
                    right: calc(0px + 40px)
                    z-index: 1
                    sf_pro_regular(15px)
                    color: $gray
                    transform: translateY(-50%)
                .up
                    position: absolute
                    top: 35%
                    right: calc(0px + 15px)
                    z-index: 1
                    width: 0
                    height: 0
                    border-left: 4px solid transparent
                    border-right: 4px solid transparent
                    border-bottom: 6px solid $green
                    transform: translateY(-50%)
                    cursor: pointer
                .down
                    position: absolute
                    top: 65%
                    right: calc(0px + 15px)
                    z-index: 1
                    width: 0
                    height: 0
                    border-left: 4px solid transparent
                    border-right: 4px solid transparent
                    border-top: 6px solid $green
                    transform: translateY(-50%)
                    cursor: pointer

.form_check
    position: relative
    display: flex
    flex-flow: row wrap
    align-items: center
    label
        flex: 0 auto
        margin-left: 10px
        margin-bottom: 0
        sf_pro_regular(15px)
        font-weight: normal
        color: $black
    .action_check
        -webkit-appearance: none
        outline: none
        width: 21px
        height: 21px
        background-image: url('/icons/uncheck-icon.svg')
        background-position: center
        background-repeat: no-repeat
        background-size: cover
        transition: .3s ease-in-out
        &:checked
            background-image: url('/icons/check-icon.svg')
            transition: .3s ease-in-out

.form_group
    position: relative
    margin-bottom: 30px
    label
        user-select: none
        display: block
        sf_pro_regular(15px)
        font-weight: normal
        color: $black
        margin-bottom: 10px
        span
            color: $green
    .validation_errors
        position: absolute
        top: calc(100% + 5px)
        background-color: $red
        color: $white
        sf_pro_medium(14px)
        z-index: 1
        padding: 5px 10px
        border-radius: 5px
        user-select: none
        left: 0
        &::before
            content: ""
            position: absolute
            bottom: calc(100% - 1px)
            width: 0
            height: 0
            border-left: 7px solid transparent
            border-right: 7px solid transparent
            border-bottom: 7px solid $red
            left: 17px
            z-index: 1

.button_group
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: flex-end

.note-tooltip
    sf_pro_regular(14px)

#action_form
    .form_image_group
        margin-bottom: 20px
        label
          strong
            color: $black
        .action_image
            position: absolute
            bottom: 10px
            opacity: 0
        .action_image_label
            position: relative
            text-transform: none
            cursor: pointer
            &::before
                content: 'Browse'
                color: $green
                position: absolute
                top: 50%
                right: 0
                padding: 20px 25px
                background-color: $light_green
                border-left: 1px solid #ccc
                transform: translateY(-51%)
                transition: .3s ease-in-out
            &:hover,
            &:focus
                &::before
                    color: $light_green
                    background-color: $green
                    border-left: 1px solid $black
                    transition: .3s ease-in-out
                & ~ .action_image_remove
                    border-left: 1px solid $black
                    border-right: 1px solid $black
                    transition: .3s ease-in-out
            & ~ .action_image_remove
                sf_pro_regular(18px)
                color: $red
                position: absolute
                top: 50%
                right: 0
                padding: 20px 25px
                background-color: #FFE5E6
                transform: translateY(-51%)
                border-left: 1px solid #ccc
                border-right: 1px solid #ccc
                border-top: none
                border-bottom: none
                outline: none
                transition: 0.3s ease-in-out
                &:hover,
                &:focus
                    background-color: $red
                    color: #FFE5E6
                    transition: .3s ease-in-out
        .action_image_add
            display: inline-block
            width: 150px
            text-decoration: none
            outline: none
            sf_pro_regular(16px)
            color: #295AAE
            padding: 17px
            background-color: #d3e3ff
            border: 1px solid #295AAE
            position: relative
            text-align: center
            cursor: pointer
            transition: .3s ease-in-out
            &:hover,
            &:focus
                color: $white
                background-color: #295AAE
                transition: .3s ease-in-out
        .form_tags_group
            display: flex
            flex-flow: row wrap
            align-items: flex-start
            justify-content: space-between
            margin-bottom: 20px
            .preview_group
                flex: 0 0 30%
                img
                    width: 100%
                    height: 200px
                    background-color: $white
                    border-left: 1px solid #ccc
                    object-fit: cover
            .tags_group
                flex: 0 0 68%
                .form_group
                    &:last-child
                        margin-bottom: 0
    .note-editor
        &.note-frame
                border: 1px solid #ccc
                transition: 0.3s ease-in-out
            &:hover,
            &:focus
                border: 1px solid $black
                transition: 0.3s ease-in-out
            .note-toolbar
                background-color: #F8F8FB
            .note-editing-area
                .note-editable
                    sf_pro_regular(18px)
                    padding: 20px 25px
/**
 * Default Table */
.cms_table
    border-collapse: collapse
    width: 100%
    border-radius: 10px
    margin-bottom: 60px
    thead
        th
            sf_pro_semibold(16px)
            color: $gray
            text-align: left
            padding: 15px 30px
            background-color: transparent
            &:first-child
                border-radius: 10px 0 0 0
            &:last-child
                border-radius: 0 10px 0 0
    tbody
        box-shadow: 15px 25px 40px rgba(0, 0, 0, 0.05)
        background-color: $white
        tr
            background-color: transparent
            border-bottom: 2px dashed $border
            transition: .3s ease-in-out
            td
                sf_pro_regular(16px)
                color: $black
                padding: 20px 30px
                &.table_actions
                    display: flex
                    flex-flow: row wrap
                    align-items: center
                    justify-content: space-between
                    a
                        flex: 0 0 47%
                        text-align: center
                        text-decoration: none
                        sf_pro_medium(16px)
                        padding: 10px 0
                        &.table_action_edit
                            background-color: $light_blue
                            color: $blue
                            transition: .3s ease-in-out
                            &:hover
                                background-color: $blue
                                color: $white
                                transition: .3s ease-in-out
                        &.table_action_cancel
                            background-color: $light_red
                            color: $red
                            transition: .3s ease-in-out
                            &:hover
                                background-color: $red
                                color: $white
                                transition: .3s ease-in-out
                        &.table_action_success
                            background-color: $light_green
                            color: $green
                            transition: .3s ease-in-out
                            &:hover
                                background-color: $green
                                color: $white
                                transition: .3s ease-in-out
            &:last-child
                border-bottom: 2px dashed transparent
            &:hover,
            &:focus
                background-color: #F8F8FB
                transition: .3s ease-in-out
    .no_results
        text-align: center

