                display: flex
                flex-flow: row wrap
                align-items: center
                cursor: pointer
                .user_picture
                    background-image: linear-gradient(137deg, $red, $orange)
                    border-radius: 50%
                    margin-right: 15px
                    padding: 10px 15px
                    color: $white
                    sf_pro_regular(16px)
                .user_name
                    sf_pro_regular(16px)
                    color: $black_alternate
            .user_select
                position: absolute
                right: 15px
                top: calc(100% + 30px)
                z-index: 1
                width: 350px
                border-radius: 5px
                background-color: $white
                opacity: 0
                visibility: hidden
                box-shadow: 15px 25px 40px rgba(0, 0, 0, 0.05)
                transition: all .2s ease-in-out
                a
                    text-decoration: none
                    outline: none
                    display: block
                .select_header
                    padding: 20px
                    background-image: linear-gradient(to right, $red, $orange)
                    border-radius: 5px 5px 0 0
                    .header_name
                        sf_pro_regular(18px)
                        color: $white
                    .header_role
                        sf_pro_light(14px)
                        color: #F8F8FB
                        margin-top: 5px
                .select_footer
                    padding: 10px 20px
                    display: flex
                    justify-content: space-between
                    .select_item
                        sf_pro_regular(16px)
                        color: $black_alternate
            &.active
                &::before
                    transform: translateY(-50%) rotate(180deg)
                    transition: .3s ease-in-out
                .user_select
                    top: calc(100% + 0px)
                    visibility: visible
                    opacity: 1
                    transition: all .2s ease-in-out
    /**
     * Navbar Side */
    .navbar_container
        position: fixed
        z-index: 2
        flex: 0 0 70px
        width: 70px
        transition: .3s ease-in-out
        &.toggled
            &:hover
                flex: 0 0 300px
                width: 300px
                transition: .3s ease-in-out .2s
                .navbar
                    .logo
                        padding: 10px 10px 60px
                        transition: .3s ease-in-out .2s
                        .logo_title
                            neutra_text(18px)
                            letter-spacing: 1px
                            padding-left: 10px
                            opacity: 1
                            visibility: visible
                            transition: .3s ease-in-out .2s
                    .nav_list
                        .item_wrapper
                            .nav_item
                                padding: 20px 30px 20px 70px
                                color: $black
                                transition: .3s ease-in-out .2s
                                &.nav_parent
                                    &::before
                                        opacity: 1
                                        visibility: visible
                                        transition: .3s ease-in-out
                                &.nuxt-link-exact-active,
                                &.nuxt-link-active
                                    transition: .3s ease-in-out .2s
                            .sub_wrapper
                                .sub_nav_list
                                    .sub_item_wrapper
                                        .sub_nav_item
                                            sf_pro_light(16px)
                                            padding: 20px 30px 20px 70px
                                            transition: .3s ease-in-out .2s
        .navbar
            height: 100%
            border-right: 1px solid #E2E2E2
            background-color: $white
            .logo
                text-decoration: none
                display: flex
                flex-flow: row wrap
                align-items: center
                justify-content: flex-start
                padding: 10px 2px 60px
