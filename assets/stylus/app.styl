                            fill: transparent
                            stroke: $white
                            transition: .3s ease-in-out
                        .cart_sign
                            fill: transparent
                            stroke: $blue
                            stroke-linecap: round
                            stroke-miterlimit: 10
                            transition: .3s ease-in-out
                    &:hover,
                    &:focus
                        .add,
                        .cart
                            fill: $white
                            transition: .3s ease-in-out
                        .add_sign
                            fill: transparent
                            stroke: $blue
                            transition: .3s ease-in-out
                        .cart_sign
                            fill: transparent
                            stroke: $white
                            stroke-linecap: round
                            stroke-miterlimit: 10
                            transition: .3s ease-in-out
