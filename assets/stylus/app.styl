.slide-enter-active,
.slide-leave-active
    transition: all .3s ease-in-out

.slide-enter,
.slide-leave-to
    opacity: 0
    transform: translateY(-20px)

.fade_in
    animation: fade_in .3s

.fade_out
    animation: fade_out .3s

/**
 * Fade */
@keyframes fade_in {
	from {
		opacity: 0
    }
	to {
		opacity: 1
    }
}

@keyframes fade_out {
	from {
		opacity: 1
    }
	to {
		opacity: 0
    }
}

/**
 * Slide In */
@keyframes slide_in {
	from {
		opacity: 0
        transform: translateX(100px)
    }
	to {
		opacity: 1
        transform: translateX(0px)
    }
}

/**
 * Blinking */
@keyframes blink {
	from {
		opacity: 0
    }
	to {
		opacity: 1
    }
}
