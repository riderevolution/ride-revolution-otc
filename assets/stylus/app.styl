.wrapper
    .total_image
        position: relative
        .front
            opacity: 1
            transform: scaleX(1)
            transition: .3s ease-in-out
        .back
            position: absolute
            top: 0
            left: 0
            z-index: 1
            opacity: 0
            transform: scaleX(-1)
            transition: .3s ease-in-out
    &:hover
        .total_image
            .front
                opacity: 0
                transform: scaleX(-1)
                transition: .3s ease-in-out
            .back
                opacity: 1
                transform: scaleX(1)
                transition: .3s ease-in-out
/**
 * Default Alert */
.cms_alert
    &#success
        position: absolute
        top: 50px
        right: 0
        left: 0
        z-index: 999
        margin: 0 auto
        width: 300px
        text-align: center
        sf_pro_regular(18px)
        color: $white
        background-image: linear-gradient(to right, $red, $orange)
        padding: 20px
        border-radius: 5px
        box-shadow: 0px 10px 12px rgba(0,0,0,0.15)

.confirmation_wrapper
    position: absolute
    top: -50px
    right: 0
    left: 0
    z-index: 999
    margin: 0 auto
    width: 425px
    text-align: center
    sf_pro_regular(18px)
    background-color: $white
    padding: 20px
    border-radius: 5px
    box-shadow: 0px 10px 12px rgba(0,0,0,0.15)
    .confirmation_text
        margin-bottom: 30px

/**
 * Pagination */
#cms_pagination
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: center
    margin-top: 60px
    user-select: none
    .next,
    .prev
        sf_pro_regular(16px)
        color: $white
        background-color: $green
        border: 1px solid $green
        padding: 8px 14px
        margin: 0 3px
        cursor: pointer
        transition: .3s ease-in-out
        &:hover,
        &:focus
            background-color: $light_green
            color: $green
            transition: .3s ease-in-out
        &.disabled
            background-color: #e2e2e2
            color: $black
            border: 1px solid #e2e2e2
            transition: .3s ease-in-out
    .number
        sf_pro_regular(16px)
        color: $green
        background-color: $light_green
        border: 1px solid $green
        padding: 8px 14px
        margin: 0 3px
        cursor: pointer
        transition: .3s ease-in-out
        &:hover,
        &:focus,
        &.active
            background-color: $green
            color: $white
            transition: .3s ease-in-out
        &.active
            pointer-events: none

/**
 * Login */
#login_container
    position: relative
    height: 100vh
    background-image: linear-gradient(to right, $red, $orange)
    .cms_login
        position: absolute
        top: 50%
        left: 50%
        width: 400px
        padding: 40px
        border-radius: 20px
        background-color: $white
        box-shadow: 15px 25px 40px rgba(0, 0, 0, 0.5)
        transform: translate(-50%, -50%)
        .logo
            display: flex
            flex-flow: row wrap
            align-items: center
            justify-content: center
            margin-bottom: 40px
            .logo_title
                neutra_text(18px)
                line-height: 1.5
                color: $black
                text-transform: uppercase
                letter-spacing: 2px
                padding-left: 10px
    .button_group
        flex-flow: column
        .error
            color: $red
            sf_pro_regular(16px)
            margin-bottom: 20px
            text-align: center
        .action_cancel_btn
            margin-left: 0
            width: 100%

#admin_container
