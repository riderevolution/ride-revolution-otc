        .modal_wrapper
            background-color: $white
            box-shadow: 5px 5px 40px rgba(0, 0, 0, 0.05)
            border-radius: 5px
            .form_title
                sf_pro_bold(22px)
                color: $black
                padding: 40px
                border-bottom: 1px solid $border
            .modal_main_group
                padding: 40px
                .form_footer_wrapper
                    margin-top: 40px
