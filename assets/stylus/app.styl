                    color: $black
                    padding-left: 0
                    text-transform: uppercase
                    visibility: hidden
                    letter-spacing: 0px
                    opacity: 0
                    transition: .3s ease-in-out
            .nav_list
                position: relative
                list-style: none
                padding: 0
                height: 840px
                overflow-x: hidden
                overflow-y: auto
                .item_wrapper
                    .nav_item
                        sf_pro_regular(16px)
                        color: transparent
                        display: block
                        position: relative
                        padding: 20px 30px
                        border-left: 2px solid transparent
                        background-color: transparent
                        text-decoration: none
                        outline: none
                        z-index: 0
                        background-position: calc(0% + 20px) calc(50%)
                        background-repeat: no-repeat
                        background-size: 25px
                        transition: .3s ease-in-out .1s
                        & ~ .sub_wrapper
                            display: block
                            height: 0px
                            overflow: hidden
                            opacity: 0
                            transition: .3s ease-in-out
                        &.dashboard
                            background-image: url('/icons/navbar/dashboard-unselected.png')
                        &.booker
                            background-image: url('/icons/navbar/booker-unselected.png')
                        &.scheduler
                            background-image: url('/icons/navbar/scheduler-unselected.png')
                        &.customers
                            background-image: url('/icons/navbar/customers-unselected.png')
                        &.instructors
                            background-image: url('/icons/navbar/instructors-unselected.png')
                        &.supplies
                            background-image: url('/icons/navbar/supplies-unselected.png')
                        &.reporting
                            background-image: url('/icons/navbar/reporting-unselected.png')
                        &.admin
                            background-image: url('/icons/navbar/admin-unselected.png')
                        &.nav_parent
                            position: relative
                            &::before
